@model Ogrenci
@{
    ViewData["Title"] = "EditStudent";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">Öğrenciyi Düzenle</h2>
        </div>
        <div class="card-body" style="background-color: black;">
            <form asp-action="EditStudent" asp-controller="Student" method="post">
                <input asp-for="Ogrenciid" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Ad" class="form-label" style="color: white;">Ad:</label>
                    <input asp-for="Ad" class="form-control" style="background-color: #333333; color: white;" />
                </div>
                <div class="mb-3">
                    <label asp-for="Soyad" class="form-label" style="color: white;">Soyad:</label>
                    <input asp-for="Soyad" class="form-control" style="background-color: #333333; color: white;" />
                </div>
                <div class="mb-3">
                    <label asp-for="Numara" class="form-label" style="color: white;">Numara:</label>
                    <input asp-for="Numara" class="form-control" style="background-color: #333333; color: white;" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
