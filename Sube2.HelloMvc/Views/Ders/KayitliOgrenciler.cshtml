@model Ders
@{
    ViewData["Title"] = "KayitliOgrenciler";
}

<div class="container my-5">
    <h1 class="text-center mb-4" style="color: black;">@Model.DersAd - Kayıtlı Öğrenciler</h1>
    <div class="card shadow">
        
            @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
            {
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="color: white;">Numara</th>
                            <th style="color: white;">Ad</th>
                            <th style="color: white;">Soyad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ogrenciDers in Model.OgrenciDersler)
                        {
                            <tr>
                                <td style="color: white;">@ogrenciDers.Ogrenci?.Numara</td>
                                <td style="color: white;">@ogrenciDers.Ogrenci?.Ad</td>
                                <td style="color: white;">@ogrenciDers.Ogrenci?.Soyad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted" style="color: white;">Bu derse henüz kayıtlı öğrenci yok.</p>
            }
        </div>
    
</div>
